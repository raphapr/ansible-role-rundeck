# framework.properties -
#

# ----------------------------------------------------------------
# Rundeck server connection information
# ----------------------------------------------------------------

framework.server.name = {{ framework_server_name }}
framework.server.hostname = {{ framework_server_hostname }}
framework.server.port = {{ framework_server_port }}
framework.server.url = {{ framework_server_url }}

# Username/password used by CLI tools.
framework.server.username = {{ framework_server_username }}
{% if framework_server_password %}
framework.server.password = {{ framework_server_password }}
{% endif %}

# ----------------------------------------------------------------
# Installation locations
# ----------------------------------------------------------------

rdeck.base=/var/lib/rundeck

framework.projects.dir=/var/rundeck/projects
framework.etc.dir=/etc/rundeck
framework.var.dir=/var/lib/rundeck/var
framework.tmp.dir=/var/lib/rundeck/var/tmp
framework.logs.dir=/var/lib/rundeck/logs
framework.libext.dir=/var/lib/rundeck/libext

# ----------------------------------------------------------------
# Email settings
# ----------------------------------------------------------------
# recipient addresses to send email (comma separated)
framework.email.tolist = {{ rd_email_default_to }}
# email address appearing in message "from" field
framework.email.from = {{ rd_email_from }}
# email address replies should go
framework.email.replyto = {{ rd_email_from }}

# The rdeck email relay host. must be a functioning smtp relay server
framework.email.mailhost = {{ rd_email_host }}
framework.email.mailport = {{ rd_email_port }}

# User/pass info if the smtp server requires it
framework.email.user = {{ rd_email_user }}
framework.email.password = {{ rd_email_password }}
framework.email.ssl = true
framework.email.failonerror = true

# ----------------------------------------------------------------
# SSH defaults for node executor and file copier
# ----------------------------------------------------------------

framework.ssh.keypath = {{ framework_ssh_keypath }}
framework.ssh.user = {{ framework_ssh_user }}

# ssh connection timeout after a specified number of milliseconds.
# "0" value means wait forever.
framework.ssh.timeout = {{ framework_ssh_timeout }}

# ----------------------------------------------------------------
# Rundeck S3 Log Storage Plugin
# ----------------------------------------------------------------

{% if rundeck_s3_enabled %}

#name of the bucket
framework.plugin.ExecutionFileStorage.org.rundeck.amazon-s3.bucket={{ rundeck_s3_bucket }}

#path to store the logs
framework.plugin.ExecutionFileStorage.org.rundeck.amazon-s3.path={{ rundeck_s3_path }}

#  AWS region name
framework.plugin.ExecutionFileStorage.org.rundeck.amazon-s3.region={{ rundeck_s3_region }}

{% endif %}
